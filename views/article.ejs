<%- include header %>
<div id="content">
	<div id="content-inner">				
		<!-- Post -->
			<article class="is-post is-post-excerpt">
				<header>
					<h2><%= post.title %></h2>
					<span class="byline">作者:<span><a href="/u/<%= post.name %>"><%= post.name %></a></span>
					<% post.tags.forEach(function (tag, index) { %>
					<% if (tag) { %>
					<span class="fa fa-tag"><span class="tag"><a href="/tags/<%= tag %>"><%= tag %></a></span></span>
					<% } %>
	 			 <% }) %>
				</header>
				<div class="info">
					<span class="date">日期:<span class="month"><%= post.time.minute %></span>
					<ul class="stats">
						<li><a href="javascript:void(0)" class="fa fa-comment"><%= post.comments.length %></a></li>
						<li><a href="javascript:void(0)" class="fa fa-eye"><%= post.pv %></a></li>
					</ul>
							<% if (user && (user.name == post.name)) { %>
		  <span><a class="edit" href="/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">编辑</a></span>
		  <span><a class="edit" href="/remove/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">删除</a></span>
			<% } %>
				</div>
				<p><%- post.post %></p>
				<%- include comment %>
			</article>
	</div>
</div>
<%- include footer %>
