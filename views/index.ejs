<%- include header %>
<div class="am-g">
	<div id="content">
		<div id="content-inner">				
			<!-- Post -->
			  <% posts.forEach(function (post, index) { %>
				<article class="is-post is-post-excerpt">
					<header>
						<h2><a href="u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h2>
						<span class="byline">作者:<span><a href="/u/<%= post.name %>"><%= post.name %></a></span>
						<% post.tags.forEach(function (tag, index) { %>
						<% if (tag) { %>
						<span class="fa fa-tag"><span class="tag"><a href="/tags/<%= tag %>"><%= tag %></a></span></span>
						<% } %>
		 			 <% }) %>
					</header>
					<div class="info">
						<span class="date">日期:<span class="month"><%= post.time.minute %></span>
						<ul class="stats">
							<li><a href="javascript:void(0)" class="fa fa-comment"><%= post.comments.length %></a></li>
							<li><a href="javascript:void(0)" class="fa fa-bookmark"><%= post.pv %></a></li>
						</ul>
					</div>
					<div class="Article_main"><%- post.post %></div>
					<a style="color:#299cd7;" href="u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">查看更多</a>				
				</article>
		  		<% }) %>
			<%- include paging %>
		</div>
	</div>
</div>
<script>
$(document).ready(function(){
	$(".Article_main").each(function(){
	var maxwidth=150;
	if($(this).text().length>maxwidth){
		$(this).text($(this).text().substring(0,maxwidth));
		$(this).html($(this).html()+'…');
	  }
  });
});
</script>  
<%- include footer %>
